resource "kubernetes_deployment" "backend_api" {
  metadata {
    name      = "backend-api"
    namespace = "default"
    labels = {
      app = "backend-api"
    }
  }
  spec {
    replicas = 0
    selector {
      match_labels = {
        app = "backend-api"
      }
    }
    template {
      metadata {
        labels = {
          app = "backend-api"
        }
      }
      spec {
        container {
          name    = "api"
          image   = "gcr.io/project/backend-api:0.3.15"
          port {
            container_port = 443
            protocol       = "TCP"
          }
        }
      }
    }
  }
}
